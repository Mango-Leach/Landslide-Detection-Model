# Environment Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/iot-dashboard
# Or use MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/iot-dashboard

# JWT Secret (change this to a random secret key)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (for alerts)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=IoT Dashboard <your-email@gmail.com>

# Alert Recipients (comma-separated)
ALERT_EMAILS=recipient1@example.com,recipient2@example.com

# üåßÔ∏è OpenWeather API (Required for Rainfall Prediction Feature)
# Get your free API key from: https://openweathermap.org/api
# Sign up ‚Üí Go to API keys ‚Üí Copy your key
# Free tier: 1,000 calls/day (more than enough)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Thresholds for Alerts
TEMP_MAX_THRESHOLD=30
TEMP_MIN_THRESHOLD=10
HUMIDITY_MAX_THRESHOLD=80
HUMIDITY_MIN_THRESHOLD=20
LIGHT_MIN_THRESHOLD=100

# Data Retention (days)
DATA_RETENTION_DAYS=30

# Session Secret
SESSION_SECRET=your-session-secret-key-change-this

# Remote Access (ngrok)
NGROK_AUTH_TOKEN=your-ngrok-auth-token

